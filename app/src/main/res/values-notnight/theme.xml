<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Gallery" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name = "isLightTheme">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Gallery</item>
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="android:windowFullscreen">true</item>
        <item name = "isLightTheme">false</item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi"> @drawable/logo_light</item>
        <!--  <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>-->
        <!--  <item name="windowSplashScreenAnimationDuration">1000</item>-->
        <!-- <item name="windowSplashScreenIconBackgroundColor">#34FFFFFF</item>-->
    </style>
</resources>